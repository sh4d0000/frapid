#!/usr/bin/env groovy 

def cli = new CliBuilder(usage: 'frapid-deploy projectPath')
def opt = cli.parse(args)

if ( opt.h ) {
   cli.usage()
   return
}

def path = opt.arguments()[0] ? opt.arguments()[0] : "."

println("Deploying project...")
def frapid = new Frapid()
frapid.deploy( path )
println("Project deployed")
