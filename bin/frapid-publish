#!/usr/bin/env groovy 

def cli = new CliBuilder(usage: 'frapid-publish projectPack prod')
def opt = cli.parse(args)

if ( opt.h || !opt.arguments()[0] ) {
   cli.usage()
   return
}

def path = opt.arguments()[0]
def env = opt.arguments()[1] ? opt.arguments()[1] : "dev"

def frapid = new Frapid()
def output = frapid.publish( path, env )
println output
