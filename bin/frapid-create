#!/usr/bin/env groovy 

def cli = new CliBuilder(usage: 'frapid-create -p"." projectName')

cli.p( longOpt: 'path', 'Project path')
def opt = cli.parse(args)

if ( opt.h || opt.arguments().isEmpty() ) {
   cli.usage()
   return
}

def path = "."

if( opt.p ) {
    path = opt.p
}

println("Creating new project...")
def frapid = new Frapid()
frapid.createProject( opt.arguments()[0], path )
println("Project created")
